# Application
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://airtableclone.com

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=airtable_user
DB_PASSWORD=strong_password_here
DB_NAME=airtable_clone_prod

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=your_very_strong_jwt_secret_key_here
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://airtableclone.com/auth/google/callback

# Google Sheets API
GOOGLE_API_KEY=your_google_api_key

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760 # 10MB

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGINS=https://airtableclone.com
SECURE_COOKIES=true
COOKIE_DOMAIN=airtableclone.com

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:admin@airtableclone.com

# Monitoring
ENABLE_METRICS=true